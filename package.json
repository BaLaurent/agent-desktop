{
  "name": "agent-desktop",
  "version": "0.5.0",
  "description": "Open-source Linux desktop client for Claude AI",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --ozone-platform-hint=auto",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win",
    "postinstall": "node scripts/rebuild-native.js",
    "pretest": "cp scripts/.native-cache/better_sqlite3.native.node node_modules/better-sqlite3/build/Release/better_sqlite3.node 2>/dev/null || true",
    "posttest": "cp scripts/.native-cache/better_sqlite3.electron.node node_modules/better-sqlite3/build/Release/better_sqlite3.node 2>/dev/null || true",
    "test": "vitest run --config vitest.config.main.ts && vitest run --config vitest.config.renderer.ts",
    "test:main": "npm run pretest && vitest run --config vitest.config.main.ts; npm run posttest",
    "test:renderer": "npm run pretest && vitest run --config vitest.config.renderer.ts; npm run posttest",
    "test:watch": "npm run pretest && vitest --config vitest.config.main.ts; npm run posttest",
    "test:coverage": "npm run pretest && vitest run --config vitest.config.main.ts --coverage && vitest run --config vitest.config.renderer.ts --coverage; npm run posttest"
  },
  "author": "Agent Desktop Contributors",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@types/dompurify": "^3.0.5",
    "better-sqlite3": "^11.7.0",
    "dbus-next": "^0.10.2",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.7.3",
    "highlight.js": "^11.11.1",
    "mermaid": "^11.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.0",
    "three": "^0.183.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/three": "^0.183.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vitest": "^4.0.18"
  }
}
